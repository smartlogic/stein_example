<h1 class="w-full text-center text-white text-2xl pb-8">Forgot your password?</h1>

<div class="flex justify-center w-full flex-wrap">
  <div class="md:w-1/2">
    <%= form_for(@changeset, Routes.registration_reset_path(@conn, :create), [class: "form"], fn f -> %>
      <%= FormView.text_field(f, :email) %>

      <%= FormView.submit_button("Reset") %>
    <% end) %>
  </div>
</div>
